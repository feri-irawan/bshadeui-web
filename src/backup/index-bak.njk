            {% for color in colors %}
                {% if color == 'blue' %}
                    {% for level in colorLevels %}
                        <button class="shadow border-none fw-bold inline-block py-0.5 px-1 {{ 'color-white' if color != 100 or color != 200 or color != 300 or color != 400 }} radius-0.3 {{ 'color-'+ color +'-500' if level <= 100 }} {{ 'color-'+ color +'-600' if level == 200 }} {{ 'color-'+ color +'-700' if level == 300 }} {{ 'color-'+ color +'-800' if level == 400 }} bg-{{color}}-{{level}}">Button {{level}}</button>
